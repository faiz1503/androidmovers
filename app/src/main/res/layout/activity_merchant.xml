<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".activity.MerchantActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Merchant"
            android:textSize="18sp"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ic_circle"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="1"
                android:textSize="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Minta bantuan kasir untuk mengisi Mo-Pay"
                android:textSize="16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#bbb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ic_circle"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="2"
                android:textSize="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Beritahu nomor HP yang kamu gunakan pada aplikasi"
                android:textSize="16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#bbb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ic_circle"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="3"
                android:textSize="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Beritahu nominal saldo yang akan diisi"
                android:textSize="16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#bbb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ic_circle"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="4"
                android:textSize="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Bayar nominal yang kamu isi ke kasir"
                android:textSize="16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#bbb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ic_circle"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="5"
                android:textSize="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Kasir akan mengisi saldo ke akun MoPay"
                android:textSize="16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#bbb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ic_circle"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="6"
                android:textSize="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Psatikan saldo sudah bertambah pada akun MoPay"
                android:textSize="16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#bbb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/ic_circle"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="7"
                android:textSize="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Simpan bukti pembayaran"
                android:textSize="16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#bbb"/>
</LinearLayout>